<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="aplicacao.MainController">

    <!-- Menu lateral -->
    <left>
        <VBox spacing="15" style="-fx-background-color: #2C3E50; -fx-padding: 20;" prefWidth="200">
            <Label text="Menu" style="-fx-text-fill: white; -fx-font-size: 18;"/>
            <Button text="Animais" fx:id="btnAnimais" prefWidth="150"/>
            <Button text="Vacinas" fx:id="btnVacinas" prefWidth="150"/>
            <Button text="Produção" fx:id="btnProducao" prefWidth="150"/>
            <Button text="Pesagem" fx:id="btnPesagem" prefWidth="150"/>
            <Button text="Reprodução" fx:id="btnReproducao" prefWidth="150"/>
        </VBox>
    </left>

    <!-- Área principal que muda -->
    <center>
        <StackPane fx:id="mainContent" style="-fx-padding: 20;">
            <Label text="Sistema de Gestão de Gado Leiteiro" style="-fx-font-size: 16;"/>
        </StackPane>
    </center>

</BorderPane>